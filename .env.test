# Test Environment Configuration
NODE_ENV=test

# Test Database - Separate from development
DATABASE_URL=postgresql://thirstybird:dev_password_123@localhost:5432/thirstybird_test

# Redis - Disabled for most tests (use memory fallbacks)
REDIS_ENABLED=false
REDIS_URL=redis://:dev_redis_pass@localhost:6379

# JWT Configuration for tests
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=1h

# Server Configuration
PORT=0
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
PORTAL_URL=http://localhost:5174

# Email Configuration - Mock for tests
SMTP_HOST=test-smtp.example.com
SMTP_PORT=587
SMTP_USER=test@thirstybird.test
SMTP_PASS=test-password
FROM_EMAIL=noreply@thirstybird.test

# Payment Configuration - Sandbox only
PAYFAST_MERCHANT_ID=test-merchant-id
PAYFAST_MERCHANT_KEY=test-merchant-key
PAYFAST_PASSPHRASE=test-passphrase-for-testing
PAYFAST_SANDBOX=true

# Peach Payments (Alternative)
PEACH_USER_ID=test-peach-user-id
PEACH_PASSWORD=test-peach-password
PEACH_ENTITY_ID=test-entity-id
PEACH_SANDBOX=true

# Rate Limiting - Reduced for faster tests
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=50
PAYMENT_RATE_LIMIT_MAX=20

# Security - Disabled some features for testing
SECURITY_REPORT_URI=
SECURITY_WEBHOOK_URL=